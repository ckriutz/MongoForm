@model MongoForm.Web.Models.Survey
@{
    ViewBag.Title = "Create";
}

<h2 style="margin-top: 15px; margin-bottom: 15px;">Simple Survey</h2>

@using (Html.BeginForm("Create", "Survey", FormMethod.Post, new { @class = "form-group" }))
{
    <div class="form-group row">
        @Html.Label("Your Name:", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("How Satisified were you?", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-6">
            @Html.DropDownListFor(m => m.Satisfaction, new List<SelectListItem>
                   { new SelectListItem{Text="Not at all.", Value="0"},
                     new SelectListItem{Text="A little.", Value="1"},
                     new SelectListItem{Text="Some.", Value="2" },
                     new SelectListItem{Text="Very much.", Value="3" } }, "Please select", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Did someone help you?", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-6">
            <div class="form-check form-check-inline">
                @Html.CheckBoxFor(model => model.IsWasHelped)
            </div>
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Any additional Comments?", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-6">
            @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", @rows = 3 })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">

        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}

